/* pages/login/login.wxss */

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #52C41A 0%, #73D13D 100%);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 100rpx 60rpx 60rpx;
}

.login-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 头部 */
.login-header {
  text-align: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.app-name {
  display: block;
  font-size: 56rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 20rpx;
}

.app-slogan {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 功能介绍 */
.features {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 80rpx;
  backdrop-filter: blur(10px);
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.feature-item:not(:last-child) {
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.feature-icon {
  font-size: 48rpx;
  margin-right: 30rpx;
}

.feature-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* 登录操作 */
.login-actions {
  margin-top: auto;
}

.login-tip {
  text-align: center;
  margin-top: 30rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.tip-text {
  color: rgba(255, 255, 255, 0.8);
}

.link-text {
  color: #FFFFFF;
  font-weight: 500;
  text-decoration: underline;
}

/* 底部 */
.login-footer {
  text-align: center;
  padding-top: 40rpx;
}

.footer-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  font-style: italic;
}
