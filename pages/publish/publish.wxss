/* pages/publish/publish.wxss */
.page-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 40rpx;
}

/* 步骤内容 */
.step-content {
  padding: 20rpx;
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  margin: 32rpx 0 20rpx;
}

/* 球场列表 */
.venues-list {
  margin-top: 20rpx;
}

.venue-card {
  background-color: #fff;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(100, 101, 102, 0.08);
}

.venue-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 12rpx;
}

.venue-address {
  font-size: 26rpx;
  color: #969799;
  margin-bottom: 8rpx;
}

.venue-distance {
  font-size: 24rpx;
  color: #07c160;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
}

/* 或分割线 */
.or-divider {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0;
  color: #969799;
  font-size: 28rpx;
}

.or-divider::before,
.or-divider::after {
  content: '';
  flex: 1;
  height: 1rpx;
  background-color: #ebedf0;
}

.or-divider text {
  padding: 0 20rpx;
}

/* 已选球场 */
.selected-venue {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(100, 101, 102, 0.08);
}

.selected-venue text {
  flex: 1;
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
}

/* 表单选择器 */
.picker-value {
  color: #323233;
  font-size: 28rpx;
}

/* 提交区域 */
.submit-section {
  margin-top: 60rpx;
  padding: 0 20rpx;
}

/* 等级选择弹窗 */
.level-picker-popup {
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #ebedf0;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
}

.popup-actions {
  padding: 32rpx 40rpx;
}
