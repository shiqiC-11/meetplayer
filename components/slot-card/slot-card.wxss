/* components/slot-card/slot-card.wxss */

.slot-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

/* 用户信息 */
.user-info {
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.rating {
  font-size: 24rpx;
  color: #FF9800;
}

.level {
  margin-top: 4rpx;
}

/* 基本信息 */
.basic-info {
  padding: 20rpx 0;
}

.info-row {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: var(--text-primary);
}

.info-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.info-text {
  flex: 1;
}

/* 费用信息 */
.payment-info {
  background: rgba(82, 196, 26, 0.05);
  border-radius: 12rpx;
  padding: 20rpx;
  border: 1rpx solid rgba(82, 196, 26, 0.2);
}

.payment-header {
  margin-bottom: 10rpx;
}

.payment-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.payment-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.payment-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.payment-amount {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.payment-progress {
  margin-top: 10rpx;
}

.progress-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 要求信息 */
.requirement-info {
  padding: 20rpx 0;
  border-top: 1rpx solid var(--border-color);
}

.requirement-row {
  display: flex;
  font-size: 26rpx;
}

.requirement-label {
  color: var(--text-secondary);
  margin-right: 10rpx;
}

.requirement-value {
  color: var(--text-primary);
  flex: 1;
}

/* 备注 */
.note {
  background: var(--secondary-color);
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  font-style: italic;
  display: flex;
  align-items: flex-start;
}

.note-icon {
  margin-right: 10rpx;
  font-size: 28rpx;
}

.note-text {
  flex: 1;
}

/* 状态标签 */
.status-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-open {
  background: rgba(82, 196, 26, 0.1);
  color: var(--primary-color);
}

.status-closed {
  background: rgba(0, 0, 0, 0.1);
  color: var(--text-secondary);
}
