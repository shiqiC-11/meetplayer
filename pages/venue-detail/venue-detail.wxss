/* pages/venue-detail/venue-detail.wxss */
.page-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

/* 球场详情 */
.venue-detail {
  padding-bottom: 20rpx;
}

/* 照片轮播 */
.photos-section {
  position: relative;
  width: 100%;
  height: 500rpx;
  background-color: #000;
}

.photos-swiper {
  width: 100%;
  height: 100%;
}

.photo {
  width: 100%;
  height: 100%;
}

.photo-indicator {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  padding: 8rpx 16rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  color: #fff;
  font-size: 24rpx;
}

/* 信息区块 */
.info-section {
  background-color: #fff;
  padding: 24rpx;
  margin-top: 20rpx;
}

/* 球场标题 */
.venue-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.venue-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #323233;
}

.status-badge {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 6rpx 12rpx;
  background-color: #f0f9ff;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #07c160;
}

/* 评分行 */
.rating-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.rating-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff976a;
}

.rating-count {
  font-size: 24rpx;
  color: #969799;
}

/* 地址行 */
.address-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx;
  background-color: #f7f8fa;
  border-radius: 12rpx;
}

.address-text {
  flex: 1;
  font-size: 28rpx;
  color: #576b95;
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.count-badge {
  padding: 4rpx 12rpx;
  background-color: #ff976a;
  border-radius: 12rpx;
  color: #fff;
  font-size: 24rpx;
  font-weight: normal;
}

/* 设施网格 */
.facilities-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.facility-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx;
  background-color: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #323233;
}

/* 约球列表 */
.slots-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.slot-card {
  padding: 20rpx;
  background-color: #f7f8fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #07c160;
}

.datetime-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
  color: #646566;
  font-size: 28rpx;
}

.requirement-info {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.cost-info {
  font-size: 26rpx;
  color: #969799;
}

.cost-label {
  margin-right: 8rpx;
}

.cost-value {
  color: #ff976a;
  font-weight: 500;
}

/* 评价列表 */
.reviews-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.review-item {
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #ebedf0;
}

.review-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.review-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.reviewer-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.reviewer-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.reviewer-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #323233;
}

.review-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #646566;
  margin-bottom: 8rpx;
}

.review-time {
  font-size: 24rpx;
  color: #969799;
}

/* 统计行 */
.stats-row {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #323233;
}

.stat-label {
  font-size: 24rpx;
  color: #969799;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-top: 1rpx solid #ebedf0;
  box-shadow: 0 -2rpx 12rpx rgba(100, 101, 102, 0.08);
  z-index: 100;
}

.bottom-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  color: #646566;
  background-color: #f7f8fa;
  border-radius: 12rpx;
}

.bottom-button.primary {
  flex: 1;
  flex-direction: row;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}
